<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mdpiyalhasan.speacktotext.Controller">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="113dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speak"
        android:background="@android:drawable/ic_btn_speak_now"
        android:onClick="test"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/uk"
        android:layout_alignRight="@+id/uk"
        android:layout_alignEnd="@+id/uk" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop"
        android:background="@android:drawable/ic_lock_silent_mode"
        android:layout_alignTop="@+id/speak"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:onClick="test"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English(UK)"
        android:id="@+id/uk"
        android:checked="false"
        android:textColor="#155ee5"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/read"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English(US)"
        android:id="@+id/us"
        android:checked="false"
        android:textColor="#155ee5"
        android:layout_alignTop="@+id/uk"
        android:layout_alignLeft="@+id/stop"
        android:layout_alignStart="@+id/stop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:id="@+id/read"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:onClick="test"/>

</RelativeLayout>
